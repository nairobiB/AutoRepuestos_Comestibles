                    Cursor="Hand"
                    Background="Transparent" 
                    Width="64"
                    
                    Style= "{DynamicResource ButtonStyle}" Click="BtnConfirmar_Click">
                <Image Source="/Imagenes/confirm.png"/>
            </Button>
            <!--#endregion-->
            <!--#endregion-->

            <!--#region CONTENIDO-->

            <!--#region Proveedor-->
            <TextBlock Grid.Column="1"
