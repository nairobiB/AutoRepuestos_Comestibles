                x:Name="rbtnContado"
                        Grid.Column="2"
                       Grid.Row="6"                      
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="15"
                       Margin ="10,0,0,0"
                       Content="Contado"
                 IsChecked="True"/>

            <RadioButton  
                x:Name="rbtnCredito"
                       Grid.Column="2"
                       Grid.Row="7"                      
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="15"
                       Margin ="10,0,0,0"
                        Content="Credito"
                        />
            <Grid Grid.Column="5"
                  Grid.Row="6"
                  Grid.RowSpan="4"
                  Grid.ColumnSpan="4">
                <TextBlock Grid.Column="1"
                       Grid.Row="6"
                       Text="Forma de pago:"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="15"
                       Margin ="10,0,0,0"/>

                <RadioButton  x:Name="rbtnCash"
                                Grid.Column="2"
                                Grid.Row="7"                      
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                FontSize="15"
                                Margin ="0,0,135,0"
                                Content="Cash"
                                IsChecked="True"/>
                <RadioButton  x:Name="rbtnTarjeta"
                                Grid.Column="2"
                                Grid.Row="7"                      
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                FontSize="15"
                                Margin ="0,0,124,0"
                                Content="Tarjeta"
                                />
                <RadioButton  x:Name="rbtnTranferencia"
                                Grid.Column="2"
                                Grid.Row="7"                      
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                FontSize="15"
                                Margin ="0,0,82,0"
                                Content="Tranferencia"
                                />



            </Grid>
            <!--#endregion-->

            <!--#region Fecha-->
            <TextBlock Grid.Column="5"
                       Grid.Row="4"
                       Grid.ColumnSpan="2"
                       Text="Fecha de pedido:"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="15"
                       Margin ="0,0,0,0"/>
            <DatePicker Grid.Column="7"
                        Grid.Row="4"
                        Grid.ColumnSpan="2"
                        Name="DpFechPedido" 
